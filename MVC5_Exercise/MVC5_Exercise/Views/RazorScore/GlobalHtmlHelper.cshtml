@model IEnumerable<MVC5_Exercise.Models.Student>

@{
    ViewBag.Title = "GlobalHtmlHelper";
}

<h2>GlobalHtmlHelper</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor((m) => m.Id)</th>
            <th>@Html.DisplayNameFor((m) => m.Name)</th>
            <th>@Html.DisplayNameFor((m) => m.Chinese)</th>
            <th>@Html.DisplayNameFor((m) => m.English)</th>
            <th>@Html.DisplayNameFor((m) => m.Math)</th>
            <th>@Html.DisplayNameFor((m) => m.Total)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor((x) => item.Id)</td>
                <td>@Html.DisplayFor((x) => item.Name)</td>

                @*中文*@
                @MyHelper.DisplayScore(item.Chinese)

                @*英文*@
                @MyHelper.DisplayScore(item.English)

                @*數學*@
                @MyHelper.DisplayScore(item.Math)

                @*總分*@
                @MyHelper.DisplayTopScore(item.Id,ViewBag.TopId,item.Total)
            </tr>
        }
    </tbody>
</table>

@section topCSS{
    <link href="~/Assets/css/RazorScore.css" rel="stylesheet" />
}
